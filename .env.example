# Server Port
# DEVELOPMENT: 2999 (API only)
# PRODUCTION: Usually 2999 or 80/443 (serves both API and frontend)
PORT=2999

# Database Configuration
# SQLite database file location (relative to project root)
DATABASE_URL="file:./data/db.db"

# Message Analysis Configuration (LLM via BAML/Ollama)
# Endpoint for the local LLM server (Ollama default)
LLM_ENDPOINT="http://localhost:11434"
# Model to use for analysis
LLM_MODEL="llama3"
# Maximum number of messages to analyze per contact
MESSAGE_HISTORY_LIMIT=500
# Maximum characters per batch sent to LLM
MESSAGE_BATCH_MAX_CHARS=1000
# Worker polling interval in milliseconds
ANALYSIS_WORKER_INTERVAL_MS=5000
# Minimum confidence threshold for suggestions (0.0-1.0)
SUGGESTION_CONFIDENCE_THRESHOLD=0.7
