{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "../build",
		"rootDir": "..",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "..",
		"paths": {
			"baml_client/*": ["baml_client/*"],
		},
	},
	"include": ["./**/*.ts", "../baml_client/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts"],
}
